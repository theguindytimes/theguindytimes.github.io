<% if user_signed_in? %>
<%= simple_form_for(@comment) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.label :comment %><br    />
    <%= f.text_area :body %>
    </div>
    <%= f.hidden_field :article_id %>
    <%= f.hidden_field :user_name %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
<%end%>