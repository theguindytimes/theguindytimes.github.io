<%= simple_form_for([@article, @article.comments.build]) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.label :body %><br    />
    <%= f.text_area :body %>
    </div>
    <%= f.hidden_field :article_id %>
    <%= f.input :user_name if !current_user%>
    <%= f.button :submit %>
    
  </div>

  <div class="form-actions">
  </div>
<% end %>
