<ul>
<% if @articles.empty? %>
   <div class="empty"><h3> No articles yet </h3></div>
<% else %>
      <div id="article_ajax" class="modalDialog">
         <div id="wrapper">
         <a href="#close" title="Close" class="close">X</a>
         <div id="contant">
         <div class="contant_1">
         <div class="contant_1_left">

         <div class="headify">         
         <%= image_tag("favicon.png", :alt => "url icon") %>
            The Guindy Times</div>
         <div class="title">
         <h2>
            <span>Time </span>
         </h2>
         </div>
         <h3>tags</h3>
         <br class="clear bottomClear" />
         <%= image_tag("gt.jpg", :alt => "" , :class => 'article_img') %>
         <div class="content">
         </div>
         </div>
         <br class="clear" />
         </div>
         </div>
         <div id="footerContainer">
            <p>
            <span>Copyright 2014 The Guindy Times. All Rights Reserved</span>
            </p>
         </div>
         <div class="comments">
         </div>
      </div>          
      </div>
    <% i=0 %>
    <% @articles.each do |a| %>
      <li><a  class="pull-left" onclick="load_article('<%= a.slug %>')" href='#article_ajax'><%= a.title %></a></li>
      <li class="pull-right" title="Views"><%= a.views %></li><br>
      <%# raw a.tag_list.map { |t| link_to t, tag_path(t) }.join(', ') %>
      <% i= i+1 %>
    <% end %>
    <%= will_paginate @articles, renderer: BootstrapPagination::Rails %>
  <% end %>
</ul>
