<section id="calendar">


<div class="row">
<h1>Calendar</h1>
<% if current_user and current_user.admin? %>
<div class="row">
<small><%= link_to "Post new event",new_event_path, class: 'pull-right' %></small>
</div>
<% end %>
<div class="events">
<% if @events.count==0 %>
No events at the moment. Please come back later
<% else %>
<div class="row">
<% @events.each do |e| %>
<div class="event-item">
<%= link_to e.title, e, class: 'pull-left' %>
<p class='pull-right'><%= e.from.strftime('%d %b %y') %><%= 'to '+e.to.strftime('%d %b %y')+' at '+e.timings.strftime('%H : %m')+' hrs' if e.from!=e.to %></p>
<br>
<div id="event-<%=e.id%>" class="event-description"></div>
</div>
<% end %>
</div>
<% end %>
</div>

