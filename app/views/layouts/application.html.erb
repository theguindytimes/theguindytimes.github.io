</head>

<body>

<div id="fb-root"></div>

  <% if !(params[:controller]=='home' and params[:action]=='index') %>
    <div class="row">
    <% if (current_user and current_user.admin?) %>
      <ol class="breadcrumb pull-left">
          <li><%= link_to "Home Page",root_path %></li>
      <% if (params[:controller]=='home' and params[:action]=='admin') %>
          <li class="active">/ Admin Dashboard</li>
      <% else %>
          <li>/ <%= link_to "Admin dashboard",admin_path %></li>
          <li class="active">/ <%= params[:controller].capitalize+' '+params[:action].capitalize %></li>
      <% end %>
      </ol>
      <ul class="pull-right">
        <li><%= link_to 'Edit account', edit_user_registration_path %> / <%= link_to 'Sign out', destroy_user_session_path, :method=>'delete' %></li>
      </ul>
    </div>
    <div class="row">
      <%= render 'layouts/messages' %>
  <% end %>
<% end %>
<%= yield %>
<% if !(params[:controller]=='home' and params[:action]=='index') %>
  </div>
<% end %>
</body>

</html>
